<div class="row">
    {{#each notes}}
        <div class="col-md-3 mt-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger w-100 btn-sm" type="submit">Delete</button>
                    </form> 
                </div>
            </div>
        </div>
    {{else}}
        <div class="card mx-auto mt-5 w-25">
            <div class="card-body">
                <p class="lead">There are not notes yet</p>
                <a href="/notes/add" class="btn btn-success w-100">Create one</a>
            </div>
        </div>
    {{/each}}
</div>