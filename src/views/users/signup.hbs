<div class="row mt-4">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Account Register
            </div>
            <div class="card-body">
                <form action="/users/signup" method="post">
                    <div class="mt-3">
                        <input type="text" class="form-control" name="name" placeholder="Name" value={{name}}>
                    </div>
                    <div class="mt-3">
                        <input type="email" class="form-control" name="email" placeholder="Email" value={{email}}>
                    </div>
                    <div class="mt-3">
                        <input type="password" class="form-control" name="password" placeholder="Password" value={{password}}>
                    </div>
                    <div class="mt-3">
                        <input type="password" class="form-control" name="confirm_password" placeholder=" Repeat Password" value={{confirm_password}}>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary w-100">
                            SignUp
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>